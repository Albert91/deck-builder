---
import Layout from '@/layouts/Layout.astro';
import { LoginForm } from '@/components/auth/LoginForm';
---

<Layout title="Login - AI Card Deck Creator">
  <div
    class="min-h-screen flex flex-col items-center p-4 bg-gradient-to-b from-slate-100 to-slate-200 dark:from-slate-900 dark:to-slate-800"
  >
    <div class="w-full max-w-md">
      <img src="/images/hero-image.png" class="mx-auto" alt="Hero" width={256} height={256} />

      <LoginForm client:load />
    </div>
  </div>
</Layout>
