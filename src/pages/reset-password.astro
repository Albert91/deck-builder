---
import Layout from '@/layouts/Layout.astro';
import { ResetPasswordForm } from '@/components/auth/ResetPasswordForm';
---

<Layout title="Reset Password - AI Card Deck Creator">
  <div
    class="min-h-screen flex flex-col items-center justify-center p-4 bg-gradient-to-b from-slate-100 to-slate-200 dark:from-slate-900 dark:to-slate-800"
  >
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1
            class="text-4xl font-extrabold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-purple-600 via-pink-500 to-indigo-500"
          >
            Card Deck Creator
          </h1>
        </a>
        <p class="mt-2 text-slate-600 dark:text-slate-400">Create amazing card decks with AI</p>
      </div>

      <ResetPasswordForm client:load />
    </div>
  </div>
</Layout>
