---
import Layout from '@/layouts/Layout.astro';
import CardEditorPage from '@/components/cards/CardFormPage';

const { deckId, cardId } = Astro.params;

if (!deckId || !cardId) {
  return Astro.redirect('/decks');
}
---

<Layout title="Edycja karty">
  <CardEditorPage client:load deckId={deckId} cardId={cardId} />
</Layout>
